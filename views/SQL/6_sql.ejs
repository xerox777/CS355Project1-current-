<body style="background-color:aqua;">
<br />
#6)  a query using GROUP BY

<br />
DROP PROCEDURE IF EXISTS sql6; <br />

DELIMITER // <br />

CREATE PROCEDURE sql6() <br />

  BEGIN <br />
    SELECT c.lname, c.address, <br />
      (SELECT Count(ecorp_id) FROM ecorp ) as ecorpCount <br />
    FROM customer c, ecorp e <br />
      join consumer_credit cc on cc.ecorp_id = e.ecorp_id <br />
    GROUP BY lname; <br />

  end // <br />

Delimiter;

<br />

<table border="1">
    <tr>
        <th style="color:red; background-color:black;">Last Name</th>
        <th style="color:red; background-color:black;">Address</th>
        <th style="color:red; background-color:black;"># of Ecorp Entries</th>
    </tr>
    <% for (var i = 0; i < sql.length; i++) { %>
    <tr>
        <td style="color:black; background-color:red;"><%= sql[i].lname %></td>
        <td style="color:black; background-color:red;"><%= sql[i].address %></td>
        <td style="color:black; background-color:red;"><%= sql[i].ecorpCount %></td>
    </tr>

    <% } %>
